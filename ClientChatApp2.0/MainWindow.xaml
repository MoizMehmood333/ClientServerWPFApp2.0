<Window x:Class="ClientChatApp2._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientChatApp2._0"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="350">
    <StackPanel>


        <RichTextBox x:Name="txtSend"
                 Margin="30 20  30 0 "
                 Height="240" Width="260"></RichTextBox>

        <Button x:Name="btnSend"
                Height="40"
                Margin=" 30 20 30  20"
                Click="btnSend_Click">Send</Button>
        <Button x:Name="btnConnext"
                Height="40"
                Margin="30 0 30  0"
                Click="btnConnext_Click">Connect</Button>
    </StackPanel>
</Window>
